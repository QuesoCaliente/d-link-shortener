---
import { Icon } from 'astro-icon/components';

interface Props {
    name: string;
    url: string;
    icon: string;
    }

const { name, url, icon } = Astro.props;

---


<a title={name} class="rounded-md inline-flex bg-blue-500 p-1 text-2xl text-gray-50  transition-all duration-300 ease-in-out hover:rounded-lg hover:bg-blue-400 hover:text-gray-200" title={name} href={url} target="_blank">
    <Icon name={icon} />
    </a>